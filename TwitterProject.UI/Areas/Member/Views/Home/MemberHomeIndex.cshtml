
@{
    ViewBag.Title = "MemberHomeIndex";
    Layout = "~/Areas/Member/Views/Shared/MemberLayoutPage.cshtml";
}

@model TwitterProject.UI.Areas.Member.Models.VM.TweetDetailVM


<br />
<div class="content">
    <div class="row">
        <div class="col-md-3 col-sm-4 col-xs-12">
            <div class="box box-widget widget-user">
                <!-- Add the bg color to the header using any of the bg-* classes -->
                <div class="widget-user-header bg-aqua-active">
                    <h3 class="widget-user-username">@Model.AppUser.FirstName @Model.AppUser.LastName</h3>
                    <h5 class="widget-user-desc">@Model.AppUser.Bio</h5>
                </div>
                <div class="widget-user-image">
                    <img class="img-circle" src="@Session["UserImage"]" alt="User Avatar">
                </div>
                <div class="box-footer">
                    <div class="row">
                        <div class="col-sm-4 border-right">
                            <div class="description-block">
                                <h5 class="description-header">@Model.Tweets.Count</h5>
                                <span class="description-text">Tweets</span>
                            </div>
                            <!-- /.description-block -->
                        </div>
                        <!-- /.col -->
                        <div class="col-sm-4 border-right">
                            <div class="description-block">
                                <h5 class="description-header">@Model.AppUser.Follow</h5>
                                <span class="description-text">Following</span>
                            </div>
                            <!-- /.description-block -->
                        </div>
                        <!-- /.col -->
                        <div class="col-sm-4">
                            <div class="description-block">
                                <h5 class="description-header">@Model.AppUser.Follower</h5>
                                <span class="description-text">Followers</span>
                            </div>
                            <!-- /.description-block -->
                        </div>
                        <!-- /.col -->
                    </div>
                    <!-- /.row -->
                </div>
            </div>
  </div>
     <div class="content-wrapper" style="min-height: 1126px;">
            <!-- Content Header (Page header) -->
            <!-- Main content -->
         <section class="content">
              <div class="row">

                    <!-- /.col -->
                    <div class="col-md-9">
                        <div class="nav-tabs-custom">
                            <div class="tab-content">
                                <div class="active tab-pane">
                                    <!-- Post -->
                                    <div class="post">
                                        @foreach (var item in Model.Tweets)
                                        {
                                            <div class="col-lg-9">
                                            </div>
                                            <div class="row">
                                                <div class="col-md-6">
                                                    <!-- Box Comment -->
                                                    <div class="box box-widget">
                                                        <div class="box-header with-border">
                                                            <div class="user-block">
                                                                <img class="img-circle" src="@item.AppUser.UserImage" alt="User Image">
                                                                <span class="username">@item.AppUser.FirstName @item.AppUser.LastName</span>
                                                                <span class="description">@item.Content</span>
                                                                <span class="img-circle" src="@item.ImagePath"></span>
                                                                <br />
                                                                @if (!(Model.Likes.Any(x => x.AppUser.UserName == User.Identity.Name)))
                                                                {
                                                                    string elementID = "message" + Model.Tweet.ID;
                                                                    <button type="button" id="like" onclick="like('@Model.Tweet.ID')" class="btn btn-default btn-xs"><i class="fa fa-thumbs-o-up"></i>Like</button>
                                                                    <span id="@elementID" style="display:none">Like You</span>

                                                                }
                                                                else
                                                                {
                                                                    <label>Like You.</label>
                                                                }
                                                                <span class="pull-right text-muted">@Model.LikeCount likes - @Model.CommentCount comments</span>

                                                                @foreach (var cmmnt in Model.Comments)
                                                                {
                                                                    <div class="box-comment">
                                                                        <!-- User image -->
                                                                        <img class="img-circle img-sm" src="@cmmnt.AppUser.UserImage" alt="User Image">
                                                                        <div class="comment-text">
                                                                            <span class="username">
                                                                                @cmmnt.AppUser.FirstName @cmmnt.AppUser.LastName
                                                                                <span class="text-muted pull-right" id="a_@cmmnt.ID">
                                                                                    @cmmnt.CreatedDate
                                                                                    <br />
                                                                                    @if (Model.Comments.Any(x => x.AppUser.UserName == User.Identity.Name))
                                                                                    {
                                                                                        <a href="/Member/Comment/DeleteComment/@cmmnt.ID" id="commentdelete" type="button" onclick="commentdelete('@cmmnt.ID')" class="btn btn-default btn-xs"><i class="fa fa-trash-o"></i></a>
                                                                                        <button type="button" id="edit" class="btn btn-default btn-xs"><i class="fa fa-edit"></i></button>
                                                                                    }
                                                                                    else
                                                                                    {
                                                                                        <button type="button" id="commentdelete" disabled="disabled" class="btn btn-default btn-xs"><i class="fa fa-trash-o"></i></button>
                                                                                        <button type="button" id="edit" disabled="disabled" class="btn btn-default btn-xs"><i class="fa fa-edit"></i></button>
                                                                                    }
                                                                                </span>
                                                                            </span><!-- /.username -->
                                                                            @cmmnt.Content
                                                                        </div>
                                                                        <!-- /.comment-text -->
                                                                    </div>
                                                                }

                                                                <div class="box-footer">
                                                                    <img class="img-responsive img-circle img-sm" src="@Session["UserImage"]" alt="Alt Text">
                                                                    <!-- .img-push is used to add margin to elements next to floating images -->
                                                                    <div class="img-push">
                                                                        <input type="text" id="comment" class="form-control input-sm" placeholder="Press enter to post comment">
                                                                        <button type="button" id="addComment" onclick="comment('@Model.Tweet.ID')" class="btn btn-default btn-xs"><i class="fa fa-thumbs-o-up"></i>Comments</button>
                                                                        <span id="message" style="display:none">Have Comments</span>
                                                                    </div>
                                                                    <br />
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        }

                                    </div>
                                    <!-- /.post -->
                                    <!-- Post -->
                                    <!-- /.post -->
                                </div>

                                <!-- /.tab-pane -->
                            </div>
                            <!-- /.tab-content -->
                        </div>
                        <!-- /.nav-tabs-custom -->
                    </div>
                    <!-- /.col -->
                </div>
                <!-- /.row -->

            </section>
            <!-- /.content -->
        </div>
    </div>
</div>


<script src="~/Content/Scripts/jquery.min.js"></script>

<script>
    function commentdelete(id) {
        $.ajax({
                    type: "POST",
                    url: "@Url.Action("DeleteComment","Comment")/" + id,
            success: function (result) {
                $("#a_" + id).fadeOut();
                    }
                })
        }

        function like(id) {
        $.ajax({
                    type: "POST",
                    dataType: "Json",
                    url: "@Url.Action("AddLike","Like")/" + id,
                    success: function (data) {
                if (data.isSuccess == true) {
                            $("#message" + id).removeAttr("");
                            $("#like").remove();
                            $("#message" + id).html("");
                            $("#message" + id).append(data.userMessage);
                    $("#commentcount").hide().fadeOut(2000);
                    $("#articlelist").append("<span class='pull-right text-muted' id='commentcount'>" + data.Likes + " likes  " + data.Comments + " comments</span>");
                        }
                        else {
                            $("#message" + id).removeAttr("");
                            $("#like").remove();
                            $("#message" + id).html("");
                            $("#message" + id).append(data.userMessage);
                        }
                    }
                })
        }
        function comment(articleID) {
            console.log(articleID);
            var commentText = $("#comment").val();
            $.ajax({
                    type: "POST",
                    dataType: "Json",
                    data: { userComment: commentText, id: articleID },
                    url: "@Url.Action("AddComment","Comment")",
                    success: function (data) {
                        if (data == true) {
                            $("#message").removeAttr("style");
                            $("#message").html("");
                            $("#message").append("Have Comments.").fadeIn(2000);
                            // Commentlerin hepsini silip tekrar listelemeyle geri çekmek gerekiyor.
                            commentdynamiclist(articleID);
                        }
                        else {
                            $("#message").removeAttr("style");
                            $("#message").html("");
                            $("#message").append("An error has occured.");
                        }
                    }
                })
    }
        function commentdynamiclist(id) {
            $.ajax({
                type: "POST",
                dataType: "Json",
                url: "@Url.Action("GetTweetComment", "Comment")/" + id,
                success: function (data) {
                    if (data != null) {
                        //console.log(data.FirstName);
                        $("#dynamiccomment").append("<div class='box-comment' id='lastcomment'><!-- User image --><img class='img-circle img-sm' src='" + data.AppUserImagePath + "' alt='User Image'><div class='comment-text'><span class='username'>" + data.FirstName + " " + data.LastName + "<span class='text-muted pull-right'>" + data.CreatedDate + "<br /><a href='' id='commentdelete' type='button' class='btn btn-default btn-xs'><i class='fa fa-trash-o'></i></a><button type='button' id='edit' class='btn btn-default btn-xs'><i class='fa fa-edit'></i></button></span></span><!-- /.username -->" + data.Content + "</div></div>");
                        $("#commentcount").hide().fadeOut(2000);
                        $("#articlelist").append("<span class='pull-right text-muted' id='commentcount'>"+data.LikeCount+" likes  "+data.CommentCount+" comments</span>");
                        $("#comment").val("");
                        $("#message").fadeOut(2000);
                        $("#lastcomment").hide().fadeIn(2000);
                    }
                    else {
                    }
                }
            })
    }
</script>



<!-- /.col -->
